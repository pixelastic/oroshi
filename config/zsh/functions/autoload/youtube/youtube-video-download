# Download a given YouTube video
# Usage:
# $ youtube-video-download ${videoId/videoUrl}

function youtube-video-download() {
	local args=($@)

	for videoId in $args; do
		yt-dlp \
			--format 'bestvideo[height<=1080]+bestaudio/best[height<=1080]' \
			--output "%(title)s.%(ext)s" \
			-- \
			$videoId
	done
}

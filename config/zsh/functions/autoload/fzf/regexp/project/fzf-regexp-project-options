# Returns the specific options to pass to fzf
function fzf-regexp-project-options() {
	fzf-regexp-options \
		--source fzf-regexp-project-source

	# Prompt
	local gitRoot="$(git-directory-root -f)/"
	local prompt="$(fzf-regexp-prompt $gitRoot)"

	echo "--prompt=${prompt} "
	echo "--color=prompt:${COLOR_ALIAS_REGEXP}:regular"
}

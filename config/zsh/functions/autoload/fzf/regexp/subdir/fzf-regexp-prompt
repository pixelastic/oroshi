# Display a prompt suitable for doing a regexp search inside of files
# It is made of three parts:
# 1. The GREP prefix
# 2. An icon to define if the folding is single or multi
# 3. The simplified path to the current folder
function fzf-regexp-prompt() {
	local directory=$1
	[[ $directory == "" ]] && directory="$PWD"

	# Regexp prefix
	local promptPrefix="$(colorize " Ôê¢ GREP " $COLOR_WHITE $COLOR_ALIAS_REGEXP)"

	# Folding icon
	local promptFoldIcon="$(fzf-regexp-fold-icon)"
	promptFoldIcon="$(colorize $promptFoldIcon $COLOR_WHITE $COLOR_ALIAS_REGEXP)"

	# Directory
	local promptDirectory="$(fzf-prompt-directory $directory)"

	echo "${promptPrefix}${promptFoldIcon}${promptDirectory} "
}

{
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Grep(*)",
      "Glob(*)",
      "LS(*)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/path/to/your/notification-script.sh"
          }
        ]
      }
    ]
  }
}

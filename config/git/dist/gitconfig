[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
  autocrlf = input
  hooksPath = ~/.oroshi/config/git/hooks
[user]
	name = Tim Carry
	email = tim@pixelastic.com
[github]
  user = pixelastic
[alias]
  download = clone --depth=1
  pwd = !pwd
  tabula-rasa = !git reset --hard && git clean -fd
  resurect = resurrect
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"\"
[interactive]
	diffFilter = diff-so-fancy --patch
[push]
  default = simple
[rebase]
  autoStash = true
[remote "origin"]
  prune = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true


[alias]
  conflicts = diff --name-only --diff-filter=U
  diff-staged = diff -w --color-words --staged
  download = clone --depth=1
  root = !git-is-repository && pwd
  tabula-rasa = !git reset --hard && git clean -fd
  resurect = resurrect
[color]
  ui = true
[color "diff"]
  meta = 86 # Diff header
  frag = 86 # @@ -9,14 +9,15 @@
  func = 28 # First line of context
  context = 25 # Lines around the diff
  new = 45 # Lines added
  old = 37 # Lines deleted
  whitespace = 54 54 # Any diff whitespace
[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
  autocrlf = input
  hooksPath = ~/.oroshi/config/git/hooks
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[push]
  default = simple
[rebase]
  autoStash = true
[remote "origin"]
  prune = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[user]
	name = Pixelastic
	email = tim@pixelastic.com
[github]
  user = pixelastic
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

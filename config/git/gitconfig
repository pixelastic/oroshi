[alias]
  commit-all = !git add --all . && git commit -v --all
  conflicts = diff --name-only --diff-filter=U
  diff-staged = diff -w --color-words --staged
  download = clone --depth=1
  root = !git-is-repository && pwd
  tabula-rasa = !git reset --hard && git clean -fd
  resurect = resurrect
[color]
  ui = true
[color "diff"]
  commit = 67
  frag = 136
  func = 235
  meta = 141
  new = 35 
  old = 160
  plain = 252
  whitespace = 88 88
[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
  autocrlf = input
  hooksPath = ~/.oroshi/config/git/hooks
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[push]
  default = simple
[remote "origin"]
  prune = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[user]
  name = Pixelastic
  email = tim@pixelastic.com
[github]
  user = pixelastic
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

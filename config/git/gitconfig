[alias]
  download = clone --depth=1
  root = !pwd
  tabula-rasa = !git reset --hard && git clean -fd
  resurect = resurrect
[color]
  ui = true
[color "diff"]
  meta = 3           # Diff header
  frag = 0           # @@ -9,14 +9,15 @@
  func = 16          # First line of context
  context = 16       # Lines untouched
  old = 1           # Lines deleted
  new = 2            # Lines added
  whitespace = 54 54 # Any diff whitespace
[color "diff-highlight"]
	oldNormal = 37
	oldHighlight = 55 bold 39
	newNormal = 45
	newHighlight = 45 bold 49
	; oldNormal = red bold
	; oldHighlight = red bold 52
	; newNormal = green bold
	; newHighlight = green bold 22
[core]
  editor = vim
  excludesfile = ~/.gitignore
  safecrlf = false
  autocrlf = input
  hooksPath = ~/.oroshi/config/git/hooks
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[interactive]
	diffFilter = diff-so-fancy --patch
[push]
  default = simple
[rebase]
  autoStash = true
[remote "origin"]
  prune = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[user]
	name = Tim Carry
	email = tim@pixelastic.com
[github]
  user = pixelastic
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

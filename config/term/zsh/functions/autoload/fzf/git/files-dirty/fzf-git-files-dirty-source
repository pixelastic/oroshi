# Returns a list of dirty files that can be added to staging area
function fzf-git-files-dirty-source() {
  local rawCompletion="$(complete-git-files-dirty)"

  for rawLine in ${(f)rawCompletion}; do
    local splitLine=(${(@s/:/)rawLine})
    local filepath=$splitLine[1]
    local changeType=$splitLine[2]

    local displayedLine=""
    [[ $changeType == "Deleted" ]]  && displayedLine="$(colorize "$filepath" "ALIAS_GIT_REMOVED")"
    [[ $changeType == "Modified" ]] && displayedLine="$(colorize "$filepath" "ALIAS_GIT_MODIFIED")"
    [[ $changeType == "New file" ]] && displayedLine="$(colorize "$filepath" "ALIAS_GIT_ADDED")"

    echo "${filepath}â–®${displayedLine}"
  done


}

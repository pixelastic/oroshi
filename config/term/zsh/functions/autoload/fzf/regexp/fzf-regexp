# Search in the text, inside of files
#
# Usage:
# $ fzf-regexp \
# --options         # Mandatory, path to the file outputting the options
function fzf-regexp() {
  zmodload zsh/zutil
  zparseopts -E -D \
    -options:=flagOptions

  local fzfOptionsPath=${flagOptions[2]}

  fzf-search \
    --options "$fzfOptionsPath" \
    --postprocess "fzf-regexp-shared-postprocess"
}

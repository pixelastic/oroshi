# Delete remote tags
# Usage:
# $ git-tag-remove-remote v0.0.1          # Remove a tag
# $ git-tag-remove-remote v0.0.1 v6.0     # Remove several tags
function git-tag-remove-remote() {
  local tags=($@)
  for tagName in $tags; do
    local displayTagName="$(git-tag-colorize "$tagName" --with-icon)"
    if git push origin ":refs/tags/$tagName" 1>/dev/null; then
      echo "Tag $displayTagName deleted"
    else
      echo "Unable to delete tag ${displayTagName}, stopping."
      return 0
    fi
  done
}

#!/usr/bin/env bash

gitRoot="$(git-directory-root)"
rebaseDir="${gitRoot}/.git/rebase-apply"
ontoBranch="${rebaseDir}/x-onto-branch"

# Getting the name of the branch we transplant onto. This is saved by a custom
# pre-rebase hook
if [[ -r "$ontoBranch" ]]; then
  cat "$ontoBranch"
  exit 0
fi
exit 1

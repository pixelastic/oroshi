#!/usr/bin/env zsh
# Preview a file at a given revision in the git-file-history preview window
local selection="$1"
local gitPath="$2"

# Find the commit from parsing the selection
local commitHash="$(cut -d ' ' -f2 <<< "$selection")"

# Show the file at this stage, with diff highlight with current version
git diff \
  $commitHash:"$gitPath" \
  :"$gitPath" \
  | tail -n +5 \
  | bat \
    --style=numbers \
    --color=always \
    --language=diff

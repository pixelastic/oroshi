#!/usr/bin/env zsh
# Find the specified file up the directory tree
# Returns the filepath if found, "" if not found
# Usage:
#   $ find-up .nvmrc

local needle=$1
[[ $needle == "" ]] && exit 1;

while [ $PWD != "/" ]; do 
  test -e $needle && echo "${PWD}/${needle}" && exit 0
  cd ..
done
echo ""
exit 1

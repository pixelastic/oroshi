#!/usr/bin/env zsh
# JSON info about RAM usage
# Display in green / yellow / red based on % usage

source $ZSH_CONFIG_PATH/theming/env/colors.zsh

local memoryUsed="$(
  free -m |
    grep Mem |
    awk '{print $3/$2 * 100}' |
    cut --delimiter "." --fields 1
)"

if [[ $memoryUsed -gt 80 ]]; then
  jo text=" ${memoryUsed}% " fg="$COLOR_ALIAS_ERROR" | jo -a
  exit
fi
if [[ $memoryUsed -gt 50 ]]; then
  jo text=" ${memoryUsed}% " fg="$COLOR_ALIAS_WARNING" | jo -a
  exit
fi

echo "[]"

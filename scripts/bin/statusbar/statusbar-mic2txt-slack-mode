#!/usr/bin/env zsh
# JSON info about if Slack mode is enabled
source $ZSH_CONFIG_PATH/theming/env/colors.zsh

local storeFile=$OROSHI_TMP_FOLDER/mic2txt/slack-mode
local icon="î¢¤  "

if [[ ! -f ${storeFile} ]]; then
  local color=$COLOR_ALIAS_COMMENT
else

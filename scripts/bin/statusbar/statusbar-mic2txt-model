#!/usr/bin/env zsh
# JSON info about current model to use for mic2txt
source $ZSH_CONFIG_PATH/theming/env/colors.zsh

local mic2txtModel=$(mic2txt-model)

if [[ $mic2txtModel = "openai" ]]; then
  local icon="󰔊  "
  local color=$COLOR_AMBER
fi

if [[ $mic2txtModel = "parakeet" ]]; then
  local icon="󰔊  "
  local color=$COLOR_GREEN
fi

jo text=$icon fg=$color | jo -a

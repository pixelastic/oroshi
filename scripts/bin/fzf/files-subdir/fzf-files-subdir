#!/usr/bin/env zsh
# Fuzzy finding files in subdirectories
local selection="$(\
  fzf-files-subdir-source \
    | fzf \
      --preview 'fzf-files-subdir-preview {}' \
)"

# Escape spaces in selections
selection=${selection:gs/ /\\ /}

# Convert multi selections into single line
selection=("${(f)selection}")

echo $selection

#!/usr/bin/env zsh
# Dynamic regexp search inside of files
# Usage:
# $ fzf-regexp \
# --options         # Mandatory, options to pass to fzf

zmodload zsh/zutil
zparseopts -E -D \
	-options:=flagOptions

local fzfOptionsPath=${flagOptions[2]}
local fzfPostprocessPath="fzf-regexp-postprocess"

# TODO:
# - keybinding for switching from all results, to only the name of files
# - keybinding (more generic) to go down/up one page at a time

fzf-search \
	--options "$fzfOptionsPath" \
	--postprocess "$fzfPostprocessPath"

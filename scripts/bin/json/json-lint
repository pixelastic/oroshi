#!/usr/bin/env zsh
# json-lint: Lint a JSON file
# Usage:
# $ json-lint ./path/to/file.json                                # Lint file
# $ json-lint --json ./path/to/file.json                         # Lint file, JSON output for vim
# $ echo '{"name":"json", "name": "json" }' | json-lint                             # Lint stdin
# $ echo '{"name":"json", "name": "json" }' | json-lint --filepath ./realpath.json  # Lint from stdin, with real location on disk

eslint-lint --parser json "$@"

#!/usr/bin/env zsh
# Runs my oroshi image
# Usage:
# $ docker-oroshi-run

local oroshiTag="$(docker-oroshi-tag)"

docker-run-interactive \
  --user 1000:1000 \
  --workdir /home/tim \
  --hostname oroshi \
  oroshi:${oroshiTag}



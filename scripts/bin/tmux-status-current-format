#!/usr/bin/env zsh

local sessionName="$1"
local windowName="$2"
local isZoomed="$3"

local textColor="colour235"
local windowColor="$(tmux-status-color $windowName)"
local windowIcon="$(tmux-status-icon $windowName)"
local sessionColor="$(tmux-status-color $sessionName)"
[[ $windowColor == "" ]] && windowColor=$sessionColor

local rightSeparator="#[fg=${windowColor},bg=${textColor}]"

local zoomSymbol=""
[[ $isZoomed == "1" ]] && zoomSymbol="  "

echo "#[fg=${textColor},bg=${windowColor}] ${windowIcon}${windowName}${zoomSymbol} ${rightSeparator}"


#!/usr/bin/env zsh
# Return the color for a specific name
# Usage:
#   tmux-status-color projects
source ~/.oroshi/config/zsh/theming/colors.zsh
local name="$1"
local colorCode=""

[[ $name == "aoinan" ]] && colorCode=$COLOR[gray]
[[ $name == "aberlaas" ]] && colorCode=$COLOR[yellow7]
[[ $name == "barrowmaze" ]] && colorCode=$COLOR[yellow8]
[[ $name == "bg" ]] && colorCode=$COLOR[orange]
[[ $name == "crafting" ]] && colorCode=$COLOR[yellow9]
[[ $name == "doctolib" ]] && colorCode=$COLOR[blue]
[[ $name == "golgoth" ]] && colorCode=$COLOR[orange]
[[ $name == "indexing" ]] && colorCode=$COLOR[blue3]
[[ $name == "maps" ]] && colorCode=$COLOR[blue3]
[[ $name == "monsters" ]] && colorCode=$COLOR[red8]
[[ $name == "netlify-minutes" ]] && colorCode=$COLOR[green8]
[[ $name == "norska" ]] && colorCode=$COLOR[blue3]
[[ $name == "on-circle" ]] && colorCode=$COLOR[red3]
[[ $name == "painting" ]] && colorCode=$COLOR[gray4]
[[ $name == "perso" ]] && colorCode=$COLOR[purple]
[[ $name == "projects" ]] && colorCode=$COLOR[green]
[[ $name == "reddinx" ]] && colorCode=$COLOR[orange3]
[[ $name == "renovate" ]] && colorCode=$COLOR[blue4]
[[ $name == "tmp" ]] && colorCode=$COLOR[gray]
[[ $name == "videogames" ]] && colorCode=$COLOR[blue8]
[[ $name == "videogames-helper" ]] && colorCode=$COLOR[blue8]

[[ $colorCode != '' ]] && echo "colour${colorCode}" && return

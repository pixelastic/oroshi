#!/usr/bin/env zsh
# Fuzzy finding in all subfiles.
local selection="$(\
f \
  --color always \
  --type file \
    | fzf \
      --ansi \
      --preview 'fzf-preview {}' \
)"
# Escape spaces in selections
selection=${selection:gs/ /\\ /}

# Convert multi selections into single line
selection=("${(f)selection}")

echo $selection

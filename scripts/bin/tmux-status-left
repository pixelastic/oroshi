#!/usr/bin/env zsh
# Name of the current session, on the leftmost part

local sessionName="$1"
local sessionColor="$(tmux-status-color $sessionName)"
local sessionIcon="$(tmux-status-icon $sessionName)"
local textColor="colour235"
local rightSeparator="#[fg=${sessionColor},bg=${textColor}]î‚°"

echo "#[fg=${textColor},bg=${sessionColor}] ${sessionIcon} ${sessionName} ${rightSeparator}"

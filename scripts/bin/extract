#!/usr/bin/env zsh
# shellcheck disable=SC1085
# Will "extract" files from most of the archive file types.

if [[ $# = 0 ]]; then
  echo "Select at least one file to extract"
  return
fi

for file in $@; do 
  case $file in
    *.7z) 7z x $file;;
    *.7z.[0-9][0-9][0-9]) 7z x $file;;
    *.Z) uncompress $file;;
    *.bz2) bzip2 -d $file;;
    *.cbr) unrar x $file;;
    *.cbz) unzip $file;;
    *.deb) sudo dpkg -i $file && sudo apt-get -f install;;
    *.gz) gunzip $file;;
    *.htmlz) unzip $file;;
    *.rar) unrar x $file;;
    *.r([0-9][0-9])) unrar x $file;;
    *.tar) tar xvf $file;;
    *.tar.bz2) tar xvjf $file;;
    *.tar.gz) tar xvzf $file;;
    *.tar.lzma) tar --lzma -xvf $file;;
    *.tar.xz) tar xvJf $file;;
    *.tbz2) tar xvjf $file;;
    *.tgz) tar xvzf $file;;
    *.txz) tar Jxvf $file;;
    *.xz) 7z x $file;;
    *.(zip|ZIP)) unzip -o $file;;
    *) echo "'$file' cannot be extracted via >extract<";;
  esac
done

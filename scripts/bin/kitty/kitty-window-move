#!/usr/bin/env zsh
# Move a window to a different tab
# Usage: kitty-window-move <windowId> <targetTabId>

local windowId="$1"
local targetTabId="$2"

if [[ "$windowId" == "" || "$targetTabId" == "" ]]; then
  echo "Usage: kitty-window-move <window-id> <target-tab-id>"
  exit 2
fi

kitty@ detach-window --match "id:${windowId}" --target-tab "id:${targetTabId}"

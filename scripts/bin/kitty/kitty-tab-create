#!/usr/bin/env zsh
# Create a new Kitty tab with the given title
# Usage: kitty-tab-create "Tab Name"
# Returns: the tab ID

local tabName="$1"
if [[ "$tabName" == "" ]]; then
  echo "Usage: kitty-tab-create <tab-name>"
  return 2
fi

kitty@ launch \
  --type tab \
  --tab-title "$tabName" \
  --keep-focus \
  --cwd current \
  zsh \
  1>/dev/null

#!/usr/bin/env zsh
# Return the background:text color for a specific name
# Usage:
#   tmux-status-color projects
local projectName="$1"
local projectKey=${(U)projectName:gs/-/_/}

local projectBackground=${(P)${:-PROJECT_${projectKey}_BACKGROUND}}
local projectForeground=${(P)${:-PROJECT_${projectKey}_FOREGROUND}}


echo -n "${projectBackground} ${projectForeground}"

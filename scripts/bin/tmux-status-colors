#!/usr/bin/env zsh
# Return the background:text color for a specific name
# Usage:
#   tmux-status-color projects
source ~/.oroshi/config/zsh/theming/colors.zsh
source ~/.oroshi/config/zsh/theming/projects.zsh

local projectSlug="$1"

local projectBackground=$PROJECT_BACKGROUND[$projectSlug]
local projectText=$PROJECT_TEXT[$projectSlug]


echo "${COLORS[$projectBackground]}:${COLORS[$projectText]}"
